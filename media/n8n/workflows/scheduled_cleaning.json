{
  "name": "Scheduled Database Cleaning",
  "nodes": [
    {
      "parameters": {
        "content": "Automated workflow: Scheduled Database Cleaning\n\nThis workflow:\n1. Calls /v3/data-pipeline/clean/database endpoint\n2. Monitors progress\n3. Generates cleaning report\n4. Sends Slack alert if errors > threshold\n5. Stores report in S3 for archival",
        "height": 530,
        "width": 1100,
        "color": 5
      },
      "id": "sticky-note-1",
      "name": "Sticky Note",
      "type": "n8n-nodes-base.stickyNote",
      "typeVersion": 1,
      "position": [
        -480,
        -240
      ]
    },
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 3 * * 0"
            }
          ]
        }
      },
      "id": "schedule-trigger-1",
      "name": "Schedule Trigger",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1.2,
      "position": [
        -300,
        0
      ]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "={{$env.API_BASE_URL}}/v3/data-pipeline/clean/database",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "Bearer {{$env.API_TOKEN}}"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "batch_size",
              "value": "1000"
            },
            {
              "name": "table_filter",
              "value": "all"
            }
          ]
        },
        "options": {}
      },
      "id": "http-request-1",
      "name": "Trigger Cleaning",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [
        -130,
        0
      ]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "={{$env.API_BASE_URL}}/v3/data-pipeline/job/{{$json.job_id}}",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "Bearer {{$env.API_TOKEN}}"
            }
          ]
        },
        "options": {}
      },
      "id": "check-status-1",
      "name": "Check Job Status",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [
        50,
        0
      ]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "condition-1",
              "leftValue": "={{$json.status}}",
              "rightValue": "completed",
              "operator": {
                "type": "string",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "check-completed-1",
      "name": "Check if Completed",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [
        230,
        0
      ]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "condition-1",
              "leftValue": "={{$json.errors}}",
              "rightValue": "={{$env.ERROR_THRESHOLD || 10}}",
              "operator": {
                "type": "number",
                "operation": "gt"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "check-errors-1",
      "name": "Check Error Threshold",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [
        410,
        0
      ]
    },
    {
      "parameters": {
        "channel": "#alerts",
        "text": "⚠️ Database Cleaning Completed with High Error Count\n\nJob ID: {{$json.job_id}}\nProcessed: {{$json.processed}}\nUpdated: {{$json.updated}}\nErrors: {{$json.errors}}\nInvalid Names: {{$json.invalid_names}}",
        "otherOptions": {}
      },
      "id": "slack-alert-1",
      "name": "Slack Alert",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 2.1,
      "position": [
        590,
        100
      ],
      "credentials": {
        "slackApi": {
          "id": "SLACK_API",
          "name": "Slack"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Generate cleaning report\nconst report = {\n  timestamp: new Date().toISOString(),\n  job_id: $input.item.json.job_id,\n  status: $input.item.json.status,\n  processed: $input.item.json.processed || 0,\n  updated: $input.item.json.updated || 0,\n  errors: $input.item.json.errors || 0,\n  invalid_names: $input.item.json.invalid_names || 0\n};\n\nreturn {\n  json: {\n    report: JSON.stringify(report, null, 2),\n    filename: `cleaning_report_${new Date().toISOString().split('T')[0]}.json`\n  }\n};"
      },
      "id": "generate-report-1",
      "name": "Generate Report",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        410,
        -100
      ]
    },
    {
      "parameters": {
        "operation": "upload",
        "bucketName": "={{$env.S3_BUCKET_NAME}}",
        "fileName": "={{$json.filename}}",
        "binaryData": true,
        "binaryPropertyName": "data",
        "options": {}
      },
      "id": "upload-s3-1",
      "name": "Upload Report to S3",
      "type": "n8n-nodes-base.aws",
      "typeVersion": 1,
      "position": [
        590,
        -100
      ],
      "credentials": {
        "aws": {
          "id": "AWS_CREDENTIALS",
          "name": "AWS account"
        }
      }
    },
    {
      "parameters": {
        "channel": "#data-pipeline",
        "text": "✅ Database Cleaning Completed\n\nJob ID: {{$('Check Job Status').item.json.job_id}}\nProcessed: {{$('Check Job Status').item.json.processed}}\nUpdated: {{$('Check Job Status').item.json.updated}}\nErrors: {{$('Check Job Status').item.json.errors}}",
        "otherOptions": {}
      },
      "id": "slack-success-1",
      "name": "Slack Success",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 2.1,
      "position": [
        770,
        -100
      ],
      "credentials": {
        "slackApi": {
          "id": "SLACK_API",
          "name": "Slack"
        }
      }
    }
  ],
  "connections": {
    "Schedule Trigger": {
      "main": [
        [
          {
            "node": "Trigger Cleaning",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Trigger Cleaning": {
      "main": [
        [
          {
            "node": "Check Job Status",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Check Job Status": {
      "main": [
        [
          {
            "node": "Check if Completed",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Check if Completed": {
      "main": [
        [
          {
            "node": "Check Error Threshold",
            "type": "main",
            "index": 0
          },
          {
            "node": "Generate Report",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Check Error Threshold": {
      "main": [
        [
          {
            "node": "Slack Alert",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Generate Report",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Generate Report": {
      "main": [
        [
          {
            "node": "Upload Report to S3",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Upload Report to S3": {
      "main": [
        [
          {
            "node": "Slack Success",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1"
  },
  "triggerCount": 1,
  "workflow_id": "scheduled_cleaning"
}